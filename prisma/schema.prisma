generator client {
  provider = "prisma-client-js"
}

generator nexusPrisma {
  provider = "nexus-prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Car {
  id          String        @id @default(uuid())
  name        String
  brand       String
  description String
  image       String
  price       Int
  stock       Int
  transaction Transaction[]
  history     CarHistory[]
}

model Transaction {
  id      String @id @default(uuid())
  user_id String
  user    User   @relation(fields: [user_id], references: [id])
  car_id  String
  car     Car    @relation(fields: [car_id], references: [id])
  amount  Int
}

model History {
  id      String       @id @default(uuid())
  tanggal DateTime     @default(now())
  total   Int
  cars    CarHistory[]
}

model CarHistory {
  id         String  @id @default(uuid())
  id_history String
  history    History @relation(fields: [id_history], references: [id])
  id_car     String
  car        Car     @relation(fields: [id_car], references: [id])
  price      Int
  amount     Int
}

